{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "allowUmdGlobalAccess": true,
    "ignoreDeprecations": "5.0",
    "preserveValueImports": true,
    "importsNotUsedAsValues": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ES2021", "DOM"]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
